{
  "overrides": {
    "axios": "^1.6.8",
    "json5@<=1.0.1": "^1.0.2",
    "semver@<=4.3.2": "^7.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@size-limit/file": "11.1.2",
    "@types/node": "20.12.5",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "bun-types": "1.1.15",
    "lefthook": "1.6.8",
    "npm-check-updates": "16.14.18",
    "react": "18.2.0",
    "size-limit": "11.1.2",
    "typescript": "5.4.4"
  },
  "name": "swapkit-monorepo",
  "packageManager": "^bun@1.1.1",
  "private": true,
  "scripts": {
    "bootstrap": "bun clean; bun install --force; bun run build",
    "build": "bun --filter '*' build",
    "clean": "bun --filter '*' clean && rm -rf node_modules; bun install",
    "deps": "bun ncu --root -u -i -ws",
    "generate:tokens": "bun run build --filter api; bun --cwd packages/swapkit/tokens generate-tokens; bun lint",
    "lint": "bun --filter '*' lint",
    "lint:ci": "bun lint && bun type-check",
    "lint:ws": "bun x sherif@latest",
    "playground:next": "bun --cwd ./playgrounds/nextjs",
    "playground:node": "bun --cwd ./playgrounds/node",
    "playground:vite": "bun --cwd ./playgrounds/vite",
    "postinstall": "lefthook install; bun lint:ws",
    "publish-packages": "bun build && bun lint && bun type-check && bun version-bump && bun changeset publish",
    "test": "bun --filter '*' test",
    "test:coverage": "bun --filter '*' test:coverage",
    "type-check": "bun --filter '*' type-check",
    "version-bump": "bun changeset version"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "secp256k1",
    "blake-hash",
    "esbuild",
    "usb",
    "core-js-pure",
    "lefthook"
  ],
  "workspaces": [
    "packages/plugins/*",
    "packages/swapkit/*",
    "packages/toolboxes/*",
    "packages/wallets/*",
    "playgrounds/*",
    "tools/*"
  ]
}
