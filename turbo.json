{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "node_modules/.cache/**"
      ]
    },
    "build-playground": {
      "dependsOn": [
        "^build",
        "^build-playground"
      ],
      "outputs": [
        "dist/**",
        "node_modules/.cache/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:android": {
      "cache": false,
      "persistent": true
    },
    "dev:ios": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "build"
      ]
    },
    "publish": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    },
    "test:coverage": {
      "dependsOn": [
        "build"
      ]
    },
    "test:watch": {
      "inputs": [
        "__tests__/**/*.test.ts",
        "__tests__/**/*.test.tsx"
      ],
      "persistent": true
    }
  }
}
