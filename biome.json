{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "coverage",
      "packages/toolboxes/cosmos/src/thorchainUtils/types/proto"
    ]
  },
  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    },
    "globals": ["Bun", "React"]
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "all": true,
        "noBannedTypes": "off",
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": { "maxAllowedComplexity": 12 }
        }
      },
      "correctness": {
        "all": true,
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "noUndeclaredVariables": "error",
        "useImportExtensions": "off"
      },
      "nursery": {
        "recommended": true
      },
      "recommended": true,
      "security": {
        "all": true
      },
      "style": {
        "all": true,
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "noNamespaceImport": "off",
        "useBlockStatements": "off",
        "useDefaultSwitchClause": "off",
        "useFilenamingConvention": "off",
        "useNamingConvention": "off",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "all": true,
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["error", "warn"]
          }
        },
        "noExplicitAny": "off",
        "useAwait": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
